{
  "extends": "astro/tsconfigs/strict",
   "compilerOptions": {
    "baseUrl": ".",
     "paths": {
       "@components/*": ["src/components/*"],
       "@assets/*": ["src/assets/*"],
       "@constants/*": ["src/constants/*"],
       "@utils/*": ["src/utils/*"],
       "@lib/*": ["src/lib/*"],
       "@i18n/*": ["src/i18n/*"],
       "@layouts/*": ["src/layouts/*"],
       "@/*": ["src/*"]
     }
    // 其他 TypeScript 配置...
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
