---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import SEO from "@components/widgets/SEO.astro";
import Navigation from "@components/common/Navigation.astro";
import Footer from "@components/common/Footer.astro";

export interface Props {
    title: string;
    description?: string;
    canonicalUrl?: string;
    ogImage?: string;
    mainClass?: string;
}

const {
    title,
    description = "一个专注于技术分享的博客",
    canonicalUrl = Astro.url.href, // 自动获取当前 URL
    ogImage = "favicon.png",
    mainClass = "w-full"
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth antialiased">
    <head>
        <SEO {title} {description} {canonicalUrl} {ogImage}/>
    </head>

    <body class="flex flex-col min-h-screen bg-gray-50 dark:bg-gray-950 text-gray-900 dark:text-gray-100 transition-colors duration-300">
        <Navigation/>

        <main
                id="main-content"
                class:list={["flex-grow w-full outline-none flex", mainClass]}
                tabindex="-1"
        >
            <slot/>
        </main>

        <Footer/>

        <slot name="footer-scripts"/>
    </body>
</html>