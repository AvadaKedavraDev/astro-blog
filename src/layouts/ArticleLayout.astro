---
// src/layouts/ArticleLayout.astro
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  author?: string;
  tags?: string[];
  readingTime?: number;
  coverImage?: string;
}

const { 
  title, 
  description, 
  pubDate,
  author = '匿名作者',
  tags = [],
  readingTime = 5,
  coverImage
} = Astro.props;
---

<BaseLayout 
  title={`${title} | TechBlog`} 
  description={description}
>
  <article class="min-h-screen ">
    <!-- 文章头部区域 -->
  
    <!-- 封面图片 -->
    {coverImage && (
      <div class="max-w-5xl mx-auto px-6 py-8">
        <div class="relative aspect-video md:aspect-21/9 bg-muted rounded-xl overflow-hidden">
          <img 
            src={coverImage} 
            alt={title}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>
    )}

    <!-- 文章内容区域 -->
    <div class="max-h-full max-w-full mx-auto px-6 py-8">
      <div class="prose prose-lg prose-slate max-w-none">
        <!-- 使用 Typography 插件的样式 -->
        <div class="
          prose-headings:font-semibold
          prose-h1:text-3xl prose-h1:border-b prose-h1:border-border prose-h1:pb-4
          prose-h2:text-2xl prose-h2:mt-12
          prose-h3:text-xl
          prose-p:leading-8
          prose-a:text-primary prose-a:no-underline prose-a:border-b prose-a:border-primary/30 hover:prose-a:border-primary
          prose-strong:font-semibold
          prose-em:italic
          prose-blockquote:border-l-primary prose-blockquote:bg-muted/50 prose-blockquote:px-6 prose-blockquote:py-4 prose-blockquote:rounded-r-lg
          prose-code:before:content-none prose-code:after:content-none
          prose-code:bg-muted prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
          prose-pre:bg-surface prose-pre:border prose-pre:border-border
          prose-ol:list-decimal prose-ul:list-disc
          prose-li:my-2
          prose-table:border prose-table:border-border
          prose-th:bg-muted prose-th:border prose-th:border-border
          prose-td:border prose-td:border-border
          prose-img:rounded-lg prose-img:border prose-img:border-border
          prose-hr:border-border
        ">
          <slot />
        </div>
      </div>

      <!-- 文章底部信息 -->
      <footer class="mt-16 pt-8 border-t border-border">
        <!-- 作者信息卡片 -->
        <div class="bg-muted/30 rounded-xl p-6 mb-8">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
              <span class="text-primary font-semibold text-lg">
                {author.charAt(0)}
              </span>
            </div>
            <div>
              <h3 class="font-semibold text-foreground">{author}</h3>
              <p class="text-sm text-muted-foreground mt-1">
                本文作者，分享技术见解和实践经验。
              </p>
            </div>
          </div>
        </div>

        <!-- 标签和分享 -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          {tags.length > 0 && (
            <div class="flex items-center space-x-2">
              <span class="text-sm text-muted-foreground">标签:</span>
              <div class="flex flex-wrap gap-2">
                {tags.map(tag => (
                  <a 
                    href={`/tags/${tag}`}
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-muted text-muted-foreground hover:bg-border transition-colors"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            </div>
          )}

          <div class="flex items-center space-x-4">
            <span class="text-sm text-muted-foreground">分享:</span>
            <div class="flex space-x-2">
              <button class="p-2 rounded-lg bg-muted hover:bg-border transition-colors">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </button>
              <button class="p-2 rounded-lg bg-muted hover:bg-border transition-colors">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <!-- 上一篇/下一篇导航 -->
    <nav class="max-w-4xl mx-auto px-6 py-8 border-t border-border">
      <div class="grid md:grid-cols-2 gap-8">
        <a href="#" class="group p-4 border border-border rounded-lg hover:border-primary/50 transition-colors">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <div>
              <span class="text-sm text-muted-foreground">上一篇</span>
              <h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
                Astro框架深度解析
              </h3>
            </div>
          </div>
        </a>

        <a href="#" class="group p-4 border border-border rounded-lg hover:border-primary/50 transition-colors text-right">
          <div class="flex items-center space-x-3 justify-end">
            <div>
              <span class="text-sm text-muted-foreground">下一篇</span>
              <h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
                TypeScript最佳实践
              </h3>
            </div>
            <svg class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      </div>
    </nav>
  </article>
</BaseLayout>

<style>
  /* 自定义代码高亮样式 */
  .prose pre {
    position: relative;
  }
  
  .prose pre code {
    background: transparent !important;
    padding: 0 !important;
  }
  
  /* 表格响应式 */
  .prose table {
    display: block;
    overflow-x: auto;
  }
</style>