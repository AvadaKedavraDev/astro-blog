---
// src/components/article/ArticleNavigation.astro
interface ArticleLink {
    title: string;
    slug: string;
}

interface Props {
    prevArticle?: ArticleLink;
    nextArticle?: ArticleLink;
}

const {prevArticle, nextArticle} = Astro.props;

// 统一路径生成逻辑
const getUrl = (slug: string) => `/blog/${slug}/`;
---

<nav class="grid sm:grid-cols-2 gap-4 mt-12 not-prose">
    {/* 上一篇：靠左对齐 */}
    <div class="flex">
        {prevArticle && (
                <a
                        href={getUrl(prevArticle.slug)}
                        class="flex-1 group flex flex-col gap-2 p-5 border border-gray-200 dark:border-gray-800 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-900 transition-all duration-300"
                >
        <span class="flex items-center gap-1 text-xs font-bold uppercase tracking-widest text-gray-400 group-hover:text-indigo-500 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/>
          </svg>
          Previous
        </span>
                    <span class="text-base font-semibold text-gray-700 dark:text-gray-200 line-clamp-2 group-hover:translate-x-[-4px] transition-transform">
          {prevArticle.title}
        </span>
                </a>
        )}
    </div>

    {/* 下一篇：靠右对齐 */}
    <div class="flex">
        {nextArticle && (
                <a
                        href={getUrl(nextArticle.slug)}
                        class="flex-1 group flex flex-col items-end gap-2 p-5 border border-gray-200 dark:border-gray-800 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-900 transition-all duration-300 text-right"
                >
        <span class="flex items-center gap-1 text-xs font-bold uppercase tracking-widest text-gray-400 group-hover:text-indigo-500 transition-colors">
          Next
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/>
          </svg>
        </span>
                    <span class="text-base font-semibold text-gray-700 dark:text-gray-200 line-clamp-2 group-hover:translate-x-[4px] transition-transform">
          {nextArticle.title}
        </span>
                </a>
        )}
    </div>
</nav>