---
interface Article {
  title: string;
  slug: string;
}

interface Props {
  prevArticle?: Article;
  nextArticle?: Article;
}

const { prevArticle, nextArticle } = Astro.props;
---

{(prevArticle || nextArticle) && (
  <nav class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {/* Previous Article */}
    <div class={!prevArticle ? 'hidden md:block' : ''}>
      {prevArticle ? (
        <a
          href={`/blog/${prevArticle.slug}/`}
          class="group block p-6 rounded-2xl border border-border hover:border-foreground/30 hover:bg-muted/30 transition-all"
        >
          <div class="flex items-center gap-2 text-sm text-muted-foreground mb-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            上一篇
          </div>
          <div class="font-medium text-foreground group-hover:text-muted-foreground transition-colors line-clamp-2">
            {prevArticle.title}
          </div>
        </a>
      ) : (
        <div class="hidden md:block p-6 rounded-2xl border border-dashed border-border">
          <div class="text-sm text-muted-foreground">没有更多了</div>
        </div>
      )}
    </div>
    
    {/* Next Article */}
    <div class={!nextArticle ? 'hidden md:block' : ''}>
      {nextArticle ? (
        <a
          href={`/blog/${nextArticle.slug}/`}
          class="group block p-6 rounded-2xl border border-border hover:border-foreground/30 hover:bg-muted/30 transition-all text-right"
        >
          <div class="flex items-center justify-end gap-2 text-sm text-muted-foreground mb-2">
            下一篇
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </div>
          <div class="font-medium text-foreground group-hover:text-muted-foreground transition-colors line-clamp-2">
            {nextArticle.title}
          </div>
        </a>
      ) : (
        <div class="hidden md:block p-6 rounded-2xl border border-dashed border-border text-right">
          <div class="text-sm text-muted-foreground">没有更多了</div>
        </div>
      )}
    </div>
  </nav>
)}
