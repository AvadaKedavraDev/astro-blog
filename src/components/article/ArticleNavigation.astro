---
// src/components/article/ArticleNavigation.astro
interface Props {
    prevArticle?: {
        title: string;
        slug: string;
    };
    nextArticle?: {
        title: string;
        slug: string;
    };
}

const { prevArticle, nextArticle } = Astro.props;
---

<nav class="max-w-4xl mx-auto px-6 py-8 border-t border-border">
    <div class="grid md:grid-cols-2 gap-8">
        {
            prevArticle ? (
                <a
                    href={`/blog/post/${prevArticle.slug}`}
                    class="group p-4 border border-border rounded-lg hover:border-primary/50 transition-colors"
                >
                    <div class="flex items-center space-x-3">
                        <svg
                            class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"
                            />
                        </svg>
                        <div>
                            <span class="text-sm text-muted-foreground">
                                上一篇
                            </span>
                            <h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
                                {prevArticle.title}
                            </h3>
                        </div>
                    </div>
                </a>
            ) : (
                <div />
            )
        }

        {
            nextArticle ? (
                <a
                    href={`/blog/post/${nextArticle.slug}`}
                    class="group p-4 border border-border rounded-lg hover:border-primary/50 transition-colors text-right"
                >
                    <div class="flex items-center space-x-3 justify-end">
                        <div>
                            <span class="text-sm text-muted-foreground">
                                下一篇
                            </span>
                            <h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
                                {nextArticle.title}
                            </h3>
                        </div>
                        <svg
                            class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"
                            />
                        </svg>
                    </div>
                </a>
            ) : (
                <div />
            )
        }
    </div>
</nav>
