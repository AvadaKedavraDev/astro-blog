---
// 上/下一篇文章
import { Icon } from "astro-icon/components";

interface Article {
  title: string;
  slug: string;
}

interface Props {
  prevArticle?: Article;
  nextArticle?: Article;
}

const { prevArticle, nextArticle } = Astro.props;
---

{(prevArticle || nextArticle) && (
  <nav class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {/* Previous Article */}
    <div class={!prevArticle ? 'hidden md:block' : ''}>
      {prevArticle ? (
        <a
          href={`/blog/${prevArticle.slug}/`}
          class="group block p-6 card-base !no-underline interactive-item"
        >
          <div class="flex items-center gap-2 text-sm text-muted-foreground mb-2 group-hover:text-foreground transition-colors">
            <Icon name="lucide:arrow-left" class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1" />
            上一篇
          </div>
          <div class="font-medium text-foreground transition-colors line-clamp-2">
            {prevArticle.title}
          </div>
        </a>
      ) : (
        <div class="hidden md:block p-6 rounded-2xl border border-dashed border-border/60 bg-muted/20">
          <div class="text-sm text-muted-foreground flex items-center gap-2">
            <Icon name="lucide:file-x" class="w-4 h-4" />
            没有更多了
          </div>
        </div>
      )}
    </div>
    
    {/* Next Article */}
    <div class={!nextArticle ? 'hidden md:block' : ''}>
      {nextArticle ? (
        <a
          href={`/blog/${nextArticle.slug}/`}
          class="group block p-6 card-base !no-underline interactive-item text-right"
        >
          <div class="flex items-center justify-end gap-2 text-sm text-muted-foreground mb-2 group-hover:text-foreground transition-colors">
            下一篇
            <Icon name="lucide:arrow-right" class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" />
          </div>
          <div class="font-medium text-foreground transition-colors line-clamp-2">
            {nextArticle.title}
          </div>
        </a>
      ) : (
        <div class="hidden md:block p-6 rounded-2xl border border-dashed border-border text-right">
          <div class="text-sm text-muted-foreground flex items-center justify-end gap-2">
            没有更多了
            <Icon name="lucide:file-x" class="w-4 h-4" />
          </div>
        </div>
      )}
    </div>
  </nav>
)}
