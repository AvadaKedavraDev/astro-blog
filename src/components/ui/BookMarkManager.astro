---
interface Link {
    name: string;
    url: string;
    desc?: string;
}

interface Category {
    title: string;
    icon: string;
    links: Link[];
}

interface Props {
    categories: Category[];
}

const { categories } = Astro.props;
---

<div class="bookmark-container w-full max-w-6xl mx-auto antialiased">
    <header class="mb-16 text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 dark:text-white mb-4">
            资源导航
        </h1>
        <p class="text-slate-500 dark:text-slate-400 mb-8">精心挑选的常用工具与开发资源</p>

        <div class="relative max-w-2xl mx-auto group">
            <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 rounded-2xl blur-xl opacity-0 group-focus-within:opacity-100 transition-opacity duration-500"></div>
            <div class="relative flex items-center">
                <input
                        type="text"
                        id="nav-search-input"
                        placeholder="输入关键词搜索网址..."
                        class="w-full px-4 py-3 bg-transparent border-none outline-none text-slate-700 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-500 text-lg"
                />
            </div>
        </div>
    </header>

    <div class="space-y-20">
        {categories.map((category) => (
            <section class="bookmark-section scroll-mt-28 m-auto p-6" id={category.title}>
                <div class="flex items-center gap-4 mb-8">
                    <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-indigo-50 dark:bg-indigo-500/10 text-indigo-600 dark:text-indigo-400 font-bold shadow-inner">
                        {category.icon}
                    </div>
                    <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 uppercase tracking-wider">
                        {category.title}
                    </h2>
                    <div class="flex-grow h-[1px] bg-slate-200 dark:bg-slate-800"></div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 auto-rows-fr">
                    {category.links.map((link) => (
                        <a
                                href={link.url}
                                target="_blank"
                                class="bookmark-card group relative flex flex-col p-6 bg-white dark:bg-slate-900 border border-slate-200/60 dark:border-slate-800/60 rounded-2xl transition-all duration-300 hover:scale-[1.02] hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] dark:hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.5)] hover:border-indigo-500/30 overflow-hidden"
                        >
                            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/[0.03] to-purple-500/[0.03] opacity-0 group-hover:opacity-100 transition-opacity dark:bg-gray-700"></div>

                            <div class="relative flex items-center gap-4 mb-4">
                                <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-slate-50 dark:bg-slate-800 p-2 border border-slate-100 dark:border-slate-700 group-hover:rotate-6 transition-transform duration-300">
                                    <img
                                            src={`https://www.google.com/s2/favicons?domain=${link.url}&sz=128`}
                                            alt=""
                                            class="w-full h-full object-contain rounded-md shadow-sm"
                                            onerror="this.src='https://api.dicebear.com/7.x/identicon/svg?seed='+encodeURIComponent(this.parentElement.nextElementSibling?.innerText)"
                                    />
                                </div>
                                <div class="flex-grow min-w-0">
                                    <h3 class="font-bold text-slate-800 dark:text-slate-100 truncate group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                                        {link.name}
                                    </h3>
                                    <span class="text-[10px] text-slate-400 dark:text-slate-500 uppercase tracking-widest font-medium">
                                        {new URL(link.url).hostname}
                                    </span>
                                </div>
                                <div class="opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>

                            {link.desc && (
                                    <p class="relative text-sm text-slate-500 dark:text-slate-400 line-clamp-2 leading-relaxed font-normal">
                                        {link.desc}
                                    </p>
                            )}
                        </a>
                    ))}
                </div>
            </section>
        ))}
    </div>

    <div id="no-results" class="hidden py-32 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-400 mb-4 text-2xl">?</div>
        <h3 class="text-slate-900 dark:text-white font-medium">未找到相关匹配项</h3>
        <p class="text-slate-500 dark:text-slate-400">试试其他关键词，或者按下 ESC 重置</p>
    </div>
</div>

<script>
    function initBookmarkManager() {
        const searchInput = document.getElementById('nav-search-input') as HTMLInputElement;
        const cards = document.querySelectorAll('.bookmark-card');
        const sections = document.querySelectorAll('.bookmark-section');
        const noResults = document.getElementById('no-results');

        if (!searchInput) return;

        // 快捷键支持：按下 / 聚焦，按下 ESC 清空
        document.addEventListener('keydown', (e) => {
            if (e.key === '/' && document.activeElement !== searchInput) {
                e.preventDefault();
                searchInput.focus();
            }
            if (e.key === 'Escape') {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
                searchInput.blur();
            }
        });

        searchInput.addEventListener('input', (e) => {
            const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
            let visibleCount = 0;

            sections.forEach((section) => {
                const sectionCards = section.querySelectorAll('.bookmark-card');
                let sectionHasMatch = false;

                sectionCards.forEach((card) => {
                    const content = card.textContent?.toLowerCase() || '';
                    const isMatch = content.includes(query);
                    (card as HTMLElement).style.display = isMatch ? 'flex' : 'none';
                    if (isMatch) {
                        sectionHasMatch = true;
                        visibleCount++;
                    }
                });

                (section as HTMLElement).style.display = sectionHasMatch ? 'block' : 'none';
            });

            if (noResults) {
                noResults.classList.toggle('hidden', visibleCount > 0 || query === '');
            }
        });
    }

    // 兼容 Swup 和 Astro 生命周期
    initBookmarkManager();
    document.addEventListener('astro:after-swap', initBookmarkManager);
</script>