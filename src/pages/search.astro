---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout title="搜索" description="搜索文章">
  <script data-swup-reload-script>
    (function() {
      'use strict';
      
      if (!location.pathname.includes('/search')) return;
      if (window.__searchInitialized) return;
      window.__searchInitialized = true;
      
      const searchInput = document.getElementById('search-input');
      const resultsContainer = document.getElementById('search-results');
      const emptyState = document.getElementById('empty-state');
      const noResults = document.getElementById('no-results');
      const loadingState = document.getElementById('loading-state');
      
      let pagefind = null;
      
      // 初始化搜索
      async function initSearch() {
        try {
          // 检查 Pagefind 是否可用
          const response = await fetch('/pagefind/pagefind.js', { method: 'HEAD' });
          if (!response.ok) {
            showDevMode();
            return;
          }
          
          // 使用 ES 模块动态导入
          const module = await import('/pagefind/pagefind.js');
          pagefind = module;
          
          // 等待初始化完成
          await pagefind.init();
          
          onPagefindReady();
        } catch (err) {
          console.error('[Search] Failed to load:', err);
          showDevMode();
        }
      }
      
      // Pagefind 准备就绪
      function onPagefindReady() {
        loadingState.classList.add('hidden');
        searchInput.disabled = false;
        searchInput.placeholder = '搜索文章标题、内容、标签...';
        emptyState.classList.remove('hidden');
        
        // 绑定搜索事件
        let searchTimeout;
        searchInput.addEventListener('input', (e) => {
          clearTimeout(searchTimeout);
          searchTimeout = setTimeout(() => handleSearch(e.target.value), 300);
        });
      }
      
      // 开发模式提示
      function showDevMode() {
        loadingState.classList.add('hidden');
        searchInput.disabled = false;
        searchInput.placeholder = '搜索文章标题、内容、标签...';
        
        resultsContainer.innerHTML = `
          <div class="text-center py-16">
            <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-amber-50 dark:bg-amber-950/20 flex items-center justify-center">
              <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
            <p class="text-muted-foreground mb-2">搜索功能仅在构建后可用</p>
            <p class="text-sm text-muted-foreground">请运行 <code class="px-1.5 py-0.5 rounded bg-muted text-xs">npm run build && npm run preview</code> 预览完整搜索</p>
          </div>
        `;
      }
      
      // 处理搜索
      async function handleSearch(query) {
        query = query.trim();
        
        if (!query) {
          emptyState.classList.remove('hidden');
          noResults.classList.add('hidden');
          resultsContainer.innerHTML = '';
          resultsContainer.appendChild(emptyState);
          resultsContainer.appendChild(noResults);
          return;
        }
        
        emptyState.classList.add('hidden');
        
        try {
          const search = await pagefind.search(query);
          
          if (!search || !search.results || search.results.length === 0) {
            noResults.classList.remove('hidden');
            resultsContainer.innerHTML = '';
            resultsContainer.appendChild(noResults);
            return;
          }
          
          // 获取结果数据
          const results = await Promise.all(
            search.results.slice(0, 10).map(r => r.data())
          );
          
          noResults.classList.add('hidden');
          renderResults(results, query);
        } catch (err) {
          console.error('[Search] Error:', err);
          showDevMode();
        }
      }
      
      // 渲染结果
      function renderResults(results, query) {
        const html = results.map(result => {
          const title = result.meta?.title || '无标题';
          const excerpt = result.excerpt || '';
          const url = result.url || '#';
          
          return `
            <article class="search-result group">
              <a href="${url}" class="block" data-swup-link>
                <div class="result-card">
                  <h3 class="result-title">${highlightText(title, query)}</h3>
                  <p class="result-excerpt">${highlightText(excerpt, query)}</p>
                  <div class="result-meta">
                    <span class="result-url">${url}</span>
                  </div>
                </div>
              </a>
            </article>
          `;
        }).join('');
        
        resultsContainer.innerHTML = html;
      }
      
      // 高亮搜索词
      function highlightText(text, query) {
        if (!query || !text) return text || '';
        // 转义 HTML 特殊字符
        text = text.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
        const regex = new RegExp(`(${escapeRegex(query)})`, 'gi');
        return text.replace(regex, '<mark class="search-highlight">$1</mark>');
      }
      
      // 转义正则特殊字符
      function escapeRegex(string) {
        return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      }
      
      // 清理
      if (window.SwupCompat) {
        window.SwupCompat.beforeContentReplace(() => {
          window.__searchInitialized = false;
        });
      }
      
      // 启动
      initSearch();
    })();
  </script>

  <div class="pt-32 pb-24 px-6">
    <div class="container-narrow">
      <!-- Header -->
      <header class="mb-12 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-100 to-indigo-50 dark:from-indigo-950/40 dark:to-indigo-900/20 mb-4 ring-1 ring-indigo-200 dark:ring-indigo-800">
          <Icon name="lucide:search" class="w-8 h-8 text-indigo-500" />
        </div>
        <h1 class="text-2xl md:text-3xl font-semibold tracking-tight mb-2">
          搜索
        </h1>
        <p class="text-sm text-muted-foreground">
          查找感兴趣的文章
        </p>
      </header>
      
      <!-- Search Box -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="relative">
          <input
            type="text"
            id="search-input"
            disabled
            placeholder="正在加载搜索..."
            class="w-full bg-card border border-border rounded-xl px-4 py-4 pr-12 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500/30 transition-all duration-200 text-base"
            autocomplete="off"
          />
          <div class="absolute right-4 top-1/2 -translate-y-1/2 text-muted-foreground pointer-events-none">
            <Icon name="lucide:search" class="w-5 h-5" />
          </div>
        </div>
      </div>
      
      <!-- Results -->
      <div class="max-w-3xl mx-auto">
        <div id="loading-state" class="text-center py-16">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full border-2 border-indigo-200 border-t-indigo-500 animate-spin"></div>
          <p class="text-muted-foreground">正在初始化搜索...</p>
        </div>
        
        <div id="empty-state" class="hidden text-center py-16">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-muted flex items-center justify-center">
            <Icon name="lucide:search" class="w-8 h-8 text-muted-foreground/50" />
          </div>
          <p class="text-muted-foreground">输入关键词开始搜索</p>
        </div>
        
        <div id="no-results" class="hidden text-center py-16">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-muted flex items-center justify-center">
            <Icon name="lucide:file-x" class="w-8 h-8 text-muted-foreground/50" />
          </div>
          <p class="text-muted-foreground">未找到相关结果</p>
        </div>
        
        <div id="search-results" class="space-y-3"></div>
      </div>
      
      <!-- Tips -->
      <div class="text-center text-sm text-muted-foreground mt-12 flex items-center justify-center gap-2">
        <Icon name="lucide:sparkles" class="w-4 h-4 text-indigo-500" />
        <p>支持中文内容全文搜索</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style is:global>
  .search-result { transition: all 0.2s ease; }
  .search-result .result-card {
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.25rem;
    background: var(--card);
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.04);
    transition: all 0.2s ease;
  }
  .search-result:hover .result-card {
    border-color: color-mix(in oklch, #6366f1 30%, var(--border));
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.08);
    transform: translateY(-1px);
  }
  .search-result .result-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--foreground);
    margin-bottom: 0.5rem;
    line-height: 1.4;
    letter-spacing: -0.01em;
  }
  .search-result:hover .result-title {
    color: color-mix(in oklch, #6366f1 80%, var(--foreground));
  }
  .search-result .result-excerpt {
    font-size: 0.9375rem;
    color: var(--muted-foreground);
    line-height: 1.7;
    margin: 0;
  }
  .search-result .result-excerpt :global(mark) {
    background: color-mix(in oklch, #6366f1 20%, transparent);
    color: color-mix(in oklch, #6366f1 90%, var(--foreground));
    border-radius: 0.25rem;
    padding: 0.125rem 0.25rem;
    font-weight: 500;
  }
  .search-result .result-meta {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }
  .search-result .result-url {
    font-size: 0.8125rem;
    color: var(--muted-foreground);
    font-family: var(--font-code);
  }
  .search-highlight {
    background: color-mix(in oklch, #6366f1 20%, transparent);
    color: color-mix(in oklch, #6366f1 90%, var(--foreground));
    border-radius: 0.25rem;
    padding: 0.125rem 0.25rem;
    font-weight: 500;
  }
  .dark .search-highlight {
    background: color-mix(in oklch, #818cf8 25%, transparent);
    color: color-mix(in oklch, #818cf8 95%, var(--foreground));
  }
  @keyframes spin { to { transform: rotate(360deg); } }
  .animate-spin { animation: spin 1s linear infinite; }
</style>
